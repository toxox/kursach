<%= simple_form_for @artist, html: { multipart: true,
  class: 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= f.input :date_started, as: :date, start_year: 1900,
   end_year: Date.today.year, input_html: { class: 'chzn-select'} %>
  <%= f.input :n_of_participants %>
  <%= f.input :photo %>
  <%= f.association :concerts, label_method: :location, input_html: { class: 'chzn-select' }%>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                artists_path, :class => 'btn' %>
  </div>
<% end %>
