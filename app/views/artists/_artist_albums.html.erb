<% unless @artist.albums.count.zero? %>
    <dt><h3>Albums:</h3></dt>
<% end %>
<br>
<dd>
  <table class="table narrow table-stripped">
    <tbody>
      <% @artist.albums.each do |album| %>
        <tr>
          <td><%= link_to (image_tag album.cover(:thumb)),
           album_path(album) %></td>
          <td><%= link_to album.album_title, album_path(album) %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</dd>