<%- model_class = Artist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @artist.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_started) %>:</strong></dt>
  <dd><%= @artist.date_started %></dd>
  <dt><strong><%= model_class.human_attribute_name(:n_of_participants) %>:</strong></dt>
  <dd><%= @artist.n_of_participants %></dd>
</dl>
  <%= image_tag @artist.photo.url(:normal) %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              artists_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_artist_path(@artist), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              artist_path(@artist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
