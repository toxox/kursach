<%- model_class = Concert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <% if admin_signed_in? %>
    <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
    <dd><%= @concert.id %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @concert.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_held) %>:</strong></dt>
  <dd><%= @concert.date_held %></dd>
</dl>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              concerts_path, :class => 'btn'  %>
  <% if admin_signed_in? %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_concert_path(@concert), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                concert_path(@concert),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
