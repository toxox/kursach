<%= form_for @song, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :album_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :album_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :song_title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :song_title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :song_duration, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :song_duration, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn' %>
  </div>
<% end %>
