<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <% if admin_signed_in? %>
    <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
    <dd><%= @song.id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:album_id) %>:</strong></dt>
    <dd><%= @song.album_id %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:album) %>:</strong></dt>
  <dd><%= @song.album.album_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:song_title) %>:</strong></dt>
  <dd><%= @song.song_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:song_duration) %>:</strong></dt>
  <dd><%= @song.song_duration %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
