<%= simple_form_for @album do |f| %>

  <%= f.association :artist, collection: Artist.order(:name), required: true,
   label: "Artist", label_method: :name, input_html: { class: 'chzn-select'} %>
  <%= f.input :album_title %>
  <%= f.input :genre_id, collection: Genre.order(:name), required: true,
   label: "Genre", label_method: :name, input_html: { class: 'chzn-select'} %>
  <%= f.input :producer_id, collection: Producer.order(:name), required: true,
   label: "Producer", label_method: :name, input_html: { class: 'chzn-select'} %>
  <%= f.input :date_released, as: :date, start_year: 1900,
   end_year: Date.today.year, input_html: { class: 'chzn-select'} %>
  <%= f.input :label_id, collection: Label.order(:name), required: true,
   label: "Label", label_method: :name, input_html: { class: 'chzn-select'} %>
  <%= f.input :cover %>
  <%= f.association :songs, label_method: :song_title, input_html: { class: 'chzn-select' }%>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                albums_path, :class => 'btn' %>
  </div>
<% end %>
