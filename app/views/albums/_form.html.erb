<%= form_for @album, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :artist_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :artist_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :album_title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :album_title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :genre_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :genre_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :producer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :producer_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_released, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date_released, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :label_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :label_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                albums_path, :class => 'btn' %>
  </div>
<% end %>
