<h1>Listing albums</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Album title</th>
      <th>Genre</th>
      <th>Producer</th>
      <th>Date released</th>
      <th>Label</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
    <tr>
      <td><%= album.artist_id %></td>
      <td><%= album.album_title %></td>
      <td><%= album.genre_id %></td>
      <td><%= album.producer_id %></td>
      <td><%= album.date_released %></td>
      <td><%= album.label_id %></td>
      <td><%= link_to 'Show', album %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

