<%- model_class = Manager -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <% if admin_signed_in? %>
    <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
    <dd><%= @manager.id %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @manager.name %></dd>
  <% if admin_signed_in? %>
    <dt><strong><%= model_class.human_attribute_name(:artist_id) %>:</strong></dt>
    <dd><%= @manager.artist_id %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:artist_id) %>:</strong></dt>
  <dd><%= @manager.artist.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              managers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manager_path(@manager), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manager_path(@manager),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
